@model Medium_Assignment.Models.ReviewIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

<p>
    @Html.ActionLink("New Review", "New", "Reviews", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Review Id
        </th>

        <th>
            Agenda
        </th>

        <th>
            Reviewer
        </th>

        <th>
            Employee
        </th>

        <th>
            Status
        </th>



    </tr>

@foreach (var review in Model.Reviews) {
<tr>


    <td>
        @review.Id
    </td>

    <td>
        @review.Agenda
    </td>

    <td>
        @if (!String.IsNullOrEmpty(review.Reviewer))
        {
            @review.Reviewer
        }
        else
        {
            <p>Unassigned</p>
        }

    </td>

    <td>
        @if (!String.IsNullOrEmpty(review.Employee))
        {
            @review.Employee
        }
        else
        {
            <p>Unassigned</p>
        }
    </td>

    <td>
        @if (review.ReviewStatusId == 1)
        {
            @Html.ActionLink("New", "Assign", new { Id = review.Id })
        }

        @if (review.ReviewStatusId == 2)
        {
            @Html.ActionLink("Assigned", "Submit", new { Id = review.Id })
        }

        @if (review.ReviewStatusId == 3)
        {
            <p>Submitted</p>
        }
    </td>
</tr>
}

</table>
