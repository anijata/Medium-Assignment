@using Medium_Assignment.Models

@{AuthDetails authDetails = (AuthDetails)Context.Session["AuthDetails"];}

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

<p>
    @Html.ActionLink("New Review", "New", "Reviews", null, new { @class = "btn btn-primary" })
</p>

<table id="table" class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>
                Review Id
            </th>

            <th>
                Agenda
            </th>

            <th>
                Reviewer
            </th>

            <th>
                Employee
            </th>

            <th>
                Status
            </th>


            <th>
                Actions
            </th>

        </tr>
    </thead>


    <tbody>
    </tbody>


</table>

@section Scripts {
    <script>

    function getReviews() {
        return $.ajax({
                type: "get",
                url: "https://localhost:44357/api/reviews/",
                datatype: "json",
                traditional: "true",
                headers: {"Authorization": '@("Bearer " + authDetails.AccessToken)'},

                error: function (jqXHR, status, err) {
                    alert(jqXHR.responseJSON.ModelState[""]);

                    console.log(jqXHR.responseJSON);
                    console.log(jqXHR);
                    console.log(status);
                    console.log(err);
                    alert("Error getting data.");
                }




            });

    }

    function populateTable(reviews) {
        for (let i = 0; i < reviews.length; i++) {
            var rev = reviews[i];

            var element = "<tr>";

            element += "<td>" + rev.Id + "</td>";
            element += "<td>" + rev.Agenda + "</td>";
            if (rev.Reviewer && rev.Employee) {
                element += "<td>" + rev.Reviewer + "</td>";
                element += "<td>" + rev.Employee + "</td>";
            } else {
                element += "<td>Unassigned</td>";
                element += "<td>Unassigned</td>";

            }

            element += "<td>"

            if (rev.ReviewStatus == "New") {

                element += "<a href= \"/Reviews/Assign/" + rev.Id + "\" class=\"btn btn-primary\" style=\"margin: 2px 2px 2px 2px;\" >New </a>";

            } else if (rev.ReviewStatus == "Assigned") {

                element += "<a href= \"/Reviews/Submit/" + rev.Id + "\" class=\"btn btn-primary\" style=\"margin: 2px 2px 2px 2px;\" >Assigned </a>";

            } else if (rev.ReviewStatus == "Submitted") {
                element += "Submitted";
            }

            element += "</td>"


            element += "<td>";

            element += "<button class= \"btn btn-primary delete\" value= \"" + rev.Id + "\"> Delete</button>";

            element += "</td>";

            element += "</tr>";


            $('#table > tbody').append(element);
        }

    }

    function deleteRequest(id) {
        return $.ajax({
            type: "DELETE",
            url: "https://localhost:44357/api/reviews/" + id,
            datatype: "json",
            traditional: "true",
            headers: {"Authorization": '@("Bearer " + authDetails.AccessToken)'},

            error: function (jqXHR, status, err) {
                alert(jqXHR.responseJSON.ModelState[""]);

                console.log(jqXHR.responseJSON);
                console.log(jqXHR);
                console.log(status);
                console.log(err);
                alert("Error getting data.");
            }

        });

    }

    function deleteButtonHandler() {
        $('.delete').click(function () {
            if (confirm("Are you sure you want to delete this review record?")) {
                deleteRequest($(this).val()).done(() => { window.location.reload(); });
            }
        });
    }


    $(document).ready(function () {
        getReviews()
            .done((data) => { populateTable(data.Reviews);})
            .done(() => { $("#table").DataTable(); }).done(deleteButtonHandler);
    });
    </script>

}
