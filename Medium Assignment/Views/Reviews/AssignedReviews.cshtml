@using Medium_Assignment.Models

@{AuthDetails authDetails = (AuthDetails)Context.Session["AuthDetails"];}

@{
    ViewBag.Title = "Index";
}

<h2>Assigned Reviews</h2>


<table id="table" class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>
                Review Id
            </th>

            <th>
                Agenda
            </th>

            <th>
                Reviewer
            </th>

            <th>
                Employee
            </th>

            <th>
                Status
            </th>

            <th>
                Actions
            </th>


        </tr>
    </thead>


    <tbody>
    </tbody>


</table>

@section Scripts {
    <script>

    function getReviews() {
        return $.ajax({
                type: "get",
                url: "https://localhost:44357/api/reviews/assigned/",
                datatype: "json",
                traditional: "true",
                headers: {"Authorization": '@("Bearer " + authDetails.AccessToken)'},

                error: function (jqXHR, status, err) {
                    alert(jqXHR.responseJSON.ModelState[""]);

                    console.log(jqXHR.responseJSON);
                    console.log(jqXHR);
                    console.log(status);
                    console.log(err);
                    alert("Error getting data.");
                }




            });

    }

    function populateTable(reviews) {
        for (let i = 0; i < reviews.length; i++) {
            var element = "<tr>";
            var rev = reviews[i];

            element += "<td>" + rev.Id + "</td>";
            element += "<td>" + rev.Agenda + "</td>";


            if (rev.Reviewer) {
                element += "<td>" + rev.Reviewer + "</td>";

            } else {
                element += "<td>Unassigned</td>";


            }

            if (rev.Employee) {
                element += "<td>" + rev.Employee + "</td>";
            } else {
                element += "<td>Unassigned</td>";
            }

            element += "<td>"
            element += rev.ReviewStatus;
            element += "</td>"

            element += "<td>"

            if (rev.ReviewStatus == "Assigned") {

                element += "<a href= \"/Reviews/Submit/" + rev.Id + "\" class=\"btn btn-primary\" style=\"margin: 2px 2px 2px 2px;\" >Submit </a>";

            } 

            element += "</td>"


            element += "</tr>";

            $('#table > tbody').append(element);
        }

    }

    $(document).ready(function () {
        getReviews()
            .done((data) => { populateTable(data.Reviews);})
            .done(() => { $("#table").DataTable();});
    });
    </script>

}
