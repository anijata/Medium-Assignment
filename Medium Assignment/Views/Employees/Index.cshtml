        function populateTable(table, employees) {
            for (let i = 0; i < employees.length; i++) {
                var emp = employees[i];


                table.row.add([
                    emp.FirstName + " " + emp.LastName,
                    emp.UserName,
                    emp.PhoneNumber,
                    emp.Email,
                    emp.DOB,
                    emp.Gender,
                    emp.Designation,
                    emp.DOJ,
                    emp.Department,
                    emp.Address1 + " " + emp.Address2,
                    emp.Country,
                    emp.State,
                    emp.City,
                    emp.EmployeeType,
                    emp.Status,
                    tableButtons(emp.Id)
                ]);

                
            }

            table.draw();

        }

        function deleteRequest(id) {
        return $.ajax({
            type: "DELETE",
            url: "https://localhost:44357/api/employees/" + id,
            datatype: "json",
            traditional: "true",
            headers: {"Authorization": '@("Bearer " + authDetails.AccessToken)'},

